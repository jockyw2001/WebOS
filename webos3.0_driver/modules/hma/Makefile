export KDRV_MODULE_BUILD

ifeq ($(KDRV_MODULE_BUILD), YES)
CONFIG_LG_BUILTIN_KDRIVER := m
endif

ifeq ($(KDRV_PLATFORM_CFG),m14_googletv)
EXTRA_CFLAGS=-fno-pic
endif

ifneq ($(CONFIG_XTENSA_PLATFORM_H13B0VDEC),)
CONFIG_LG_BUILTIN_KDRIVER := y
endif
ifneq ($(CONFIG_XTENSA_PLATFORM_D13VDEC),)
CONFIG_LG_BUILTIN_KDRIVER := y
endif
ifneq ($(CONFIG_XTENSA_PLATFORM_D14VDEC),)
CONFIG_LG_BUILTIN_KDRIVER := y
endif
ifneq ($(CONFIG_XTENSA_PLATFORM_M14VDEC),)
CONFIG_LG_BUILTIN_KDRIVER := y
endif
ifneq ($(CONFIG_XTENSA_PLATFORM_H15VDEC),)
CONFIG_LG_BUILTIN_KDRIVER := y
endif
ifneq ($(CONFIG_XTENSA_PLATFORM_H15FPGAVDEC),)
CONFIG_LG_BUILTIN_KDRIVER := y
endif



obj-$(CONFIG_LG_BUILTIN_KDRIVER) += hma.o
hma-objs += hma_alloc.o
hma-objs += hma_drv.o

