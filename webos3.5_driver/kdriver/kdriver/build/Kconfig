	bool "Static"
	help
	  Select If the operation system of this chip is Nuttx system. 
	  If unsure, say 'N'.
	  
config DYNAMIC
	bool "Dynamic"
	help
	  Select If the operation system of this chip is Nuttx system. 
	  If unsure, say 'N'.
endchoice

config LINK_TYPE
	string
	default "static" if STATIC
	default "dynamic" if DYNAMIC
	help
	  Select the the linking type
