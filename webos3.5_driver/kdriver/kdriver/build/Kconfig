	bool "Exe"
	help
	  Select If the library is built as 'exe' format
	  If unsure, say 'N'.

config LINT
	bool "Lint"
	help
	  Select If the library is built as 'lint' format
	  If unsure, say 'N'.
endchoice

config MAKE_TYPE
	string
	default "lib" if LIB
	default "exe" if EXE
	default "lint" if LINT
	help
	  Make type
