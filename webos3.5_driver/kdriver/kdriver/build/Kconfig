	string
	default "arm_ca53" if ARM_CA53
	default "arm_ca12" if ARM_CA12
	default "arm9" if ARM_CA9
	default "arm_ca7" if ARM_CA7
	default "mips4ke" if MIPS_4KE
	default "mips34k" if MIPS_34K
	default "mips74k" if MIPS_74K
